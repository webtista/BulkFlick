{
  "name": "bulkflick",
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./public/assets/styles.css",
    "css:watch": "npx @tailwindcss/cli -i ./src/styles.css -o ./public/assets/styles.css --watch",
    "build:watch": "tsc -w",
    "dev:electron": "electron .",
    "dev": "npm-run-all --parallel css:watch build:watch dev:electron"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "electron": "^31.0.0",
    "typescript": "^5.6.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {}
}
